<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginBottom="5sp"
    android:layout_marginLeft="3sp"
    android:layout_marginRight="3sp"
    >
    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.30" />

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="书名TestTitle"
        android:textSize="24dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/bookImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bookAuthor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6"
        />
    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="作者"
        android:textSize="20dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/bookImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookTitle"
        app:layout_constraintBottom_toTopOf="@id/bookHavedRead"
        app:layout_constraintWidth_percent="0.6"
        />
    <TextView
        android:id="@+id/bookHavedRead"
        android:text="读到 第x章"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/bookImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookAuthor"
        app:layout_constraintBottom_toTopOf="@id/bookUpdateTime"
        app:layout_constraintWidth_percent="0.6"
        />
    <TextView
        android:id="@+id/bookUpdateTime"
        android:text="2019/7/25 16:17 更新"
        android:textSize="16dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/bookImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookHavedRead"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.6"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
