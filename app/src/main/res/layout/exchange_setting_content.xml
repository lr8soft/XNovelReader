<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_total_plane"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_nightMode_plane"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp">
        <TextView
            android:id="@+id/setting_nightMode_textview"
            android:text="开启夜间模式"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/setting_nightMode_switch"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/setting_nightMode_switch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/setting_nightMode_textview"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_slip_plane"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_nightMode_plane"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp">
        <TextView
            android:id="@+id/setting_slip_textview"
            android:text="翻页距离判定"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/setting_slip_textbox"
            />
        <EditText
            android:id="@+id/setting_slip_textbox"
            android:gravity="right"
            android:text="400"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/setting_slip_textview"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:text="Powered by LT_lrsoft\n所有书籍信息均来源于网络"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>